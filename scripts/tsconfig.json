{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "declaration": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "dist"
    ]
}