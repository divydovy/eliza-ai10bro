{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": "..",
        "declaration": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "@elizaos/*": [
                "packages/*/src"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "dist"
    ],
    "references": [
        {
            "path": "../packages/core"
        }
    ]
}