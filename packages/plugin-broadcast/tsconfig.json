{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}